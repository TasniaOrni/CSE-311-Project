<%- include('modules/head') %>

  <main>
    <div class="content mt-xs-2 mt-md-4">
      <div class="container py-4">
        <div class="row">
          <div class="col-md-6">
            <img src="/images/signin.svg" alt="Image" class="img-fluid">
          </div>
          <div class="col-md-6">
            <div class="row d-flex align-items-center justify-content-center mb-5">
              <div class="col-md-8">
                <div class="mb-4">
                  <h3 class="text-center">Join!</h3>
                </div>
                <form action="#" method="post" id="loginForm">
                  <div class="form-group first">
                    <label for="email">Email</label>
                    <input type="email" class="form-control" id="email" name="email">
                  </div>
                  <div class="form-group last mt-2 mb-3">
                    <label for="password">Password</label>
                    <input type="password" class="form-control" id="password" name="password" autocomplete="false">
                  </div>

                  <div class="d-flex mb-3 align-items-center">
                    <div class="ml-auto text-danger" id="responseMessage"></div>
                  </div>

                  <input type="submit" value="Log In" class="btn btn-block btn-primary loginBtn">
                </form>
                <hr class="mt-4">
                <p>Doesn't have an account? <a class="text-decoration-none" href="/signup">Sign up!</a></p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>

  <%- include('modules/foot') %>
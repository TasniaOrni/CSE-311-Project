<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>
    <%= title %>
  </title>

  <!-- Favicon -->
  <link rel="shortcut icon" href="images/job-icon.png" type="image/x-icon">

  <!-- Bootstrap CSS link -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

  <!-- CSS File -->
  <link rel="stylesheet" href="/css/footer.css">

  <!-- Icon -->
  <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>

<body>

  <header>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container">
        <a class="navbar-brand" href="/">
          <img src="/placeholder.png" height="34px" alt="project logo">
        </a>
        <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarCollapse">
          <div class="navbar-nav mx-auto d-flex justify-content-evenly">
            <% if(url=="/recruiter" ){ %>
            <a href="/recruiter" class="nav-link text-decoration-none mx-2 active"><i class="fas fa-clinic-medical"></i> Home</a>
            <% } else { %>
            <a href="/recruiter" class="nav-link text-decoration-none mx-2"><i class="fas fa-clinic-medical"></i> Home</a>
            <% } %>

            <% if(url=="/recruiter/jobs/post" ){ %>
            <a href="/recruiter/jobs/post" class="nav-link text-decoration-none mx-2 active"><i class="fas fa-th-large"></i> Post</a>
            <% } else { %>
            <a href="/recruiter/jobs/post" class="nav-link text-decoration-none mx-2"><i class="fas fa-th-large"></i> Post</a>
            <% } %>

            <% if(url=="/recruiter/jobs" ){ %>
            <a href="/recruiter/jobs" class="nav-link text-decoration-none mx-2 active"><i class="fas fa-check-double"></i> Circular</a>
            <% } else { %>
            <a href="/recruiter/jobs" class="nav-link text-decoration-none mx-2"><i class="fas fa-check-double"></i> Circular</a>
            <% } %>

            <% if(url=="/recruiter/jobs/applicants" ){ %>
            <a href="/recruiter/jobs/applicants" class="nav-link text-decoration-none mx-2 active"><i class="fa-solid fa-hands-clapping"></i> Applications</a>
            <% } else { %>
            <a href="/recruiter/jobs/applicants" class="nav-link text-decoration-none mx-2"><i class="fa-solid fa-hands-clapping"></i> Applications</a>
            <% } %>

            <% if(url=="/recruiter/profile" ){ %>
            <a href="/recruiter/profile" class="nav-link text-decoration-none mx-2 active"><i class="fa-solid fa-building"></i> Profile</a>
            <% } else { %>
            <a href="/recruiter/profile" class="nav-link text-decoration-none mx-2"><i class="fa-solid fa-building"></i> Profile</a>
            <% } %>

            <% if(url=="/recruiter/profile/update" ){ %>
            <a href="/recruiter/profile/update" class="nav-link text-decoration-none mx-2 active"><i class="fa-solid fa-pen-to-square"></i> Edit</a>
            <% } else { %>
            <a href="/recruiter/profile/update" class="nav-link text-decoration-none mx-2"><i class="fa-solid fa-pen-to-square"></i> Edit</a>
            <% } %>
          </div>
          <div class="mx-2 d-inline-block">
            <% if (!isLogin) { %>
            <a href="/login" class="link-dark text-decoration-none mx-auto">Login</a> <span> / </span>
            <a href="/signup" class="link-dark text-decoration-none mx-auto">Sign up</a>
            <% } else { %>
            <a href="/api/auth/logout" class="link-dark text-decoration-none mx-auto"><i class="fa-solid fa-arrow-right-from-bracket"></i> Logout</a>
            <% } %>
          </div>
        </div>
      </div>
    </nav>
  </header>

  <!-- Navbar End -->
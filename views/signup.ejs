<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Project Name</title>

  <!-- Bootstrap 5 css -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <link rel="stylesheet" href="/css/footer.css">
</head>

<body class="d-flex flex-column h-100">
  <header>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container">
        <a class="navbar-brand" href="/">
          <img src="/placeholder.png" height="34px" alt="project logo">
        </a>
        <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarCollapse">
          <div class="navbar-nav mx-auto d-flex justify-content-evenly">
            <a href="/" class="nav-link text-decoration-none mx-2">Home</a>
            <a href="/jobs" class="nav-link text-decoration-none mx-2">Jobs</a>
            <a href="/contact" class="nav-link text-decoration-none mx-2">Contact</a>
          </div>
          <div class="mx-auto d-inline-block">
            <a href="/login" class="link-dark text-decoration-none mx-auto ">Login</a> <span> / </span>
            <a href="/signup" class="link-dark text-decoration-none mx-auto ">Sign up</a>
          </div>
        </div>
      </div>
    </nav>
  </header>

  <main>
    <div class="content mt-xs-2 mt-md-4">
      <div class="container py-4">
        <div class="row">
          <div class="col-md-6">
            <img src="/images/signin.svg" alt="Image" class="img-fluid">
          </div>
          <div class="col-md-6">
            <div class="row d-flex align-items-center justify-content-center mb-5">
              <div class="col-md-8">
                <div class="mb-4">
                  <h3 class="text-center">Sign up!</h3>
                </div>
                <form action="#" method="post">
                  <div class="form-group first">
                    <label for="name"> Name</label>
                    <input type="text" id="name" class="form-control" name="name" placeholder="Your Name">
                  </div>
                  <div class="form-group mt-2">
                    <label for="email"> Email</label>
                    <input type="email" id="email" name="email" class="form-control" placeholder="abc@gmail.com">
                  </div>

                  <div class="form-group mt-2">
                    <label for="password"> Password</label>
                    <input type="password" id="password" name="password" class="form-control" placeholder="Your Password">
                  </div>
                  <div class="form-group mt-2">
                    <label for="confirmPassword"> Confirm Password</label>
                    <input type="password" id="confirmPassword" name="confirmPassword" class="form-control" placeholder="Your Password">
                  </div>
                  <div class="form-group last my-3">
                    <p>
                      <span><input type="checkbox" class="radio me-2" value="applicant" name="role" onclick="onlyOne(this)" checked />Applicant</span>
                    </p>

                    <p>
                      <span><input type="checkbox" class="radio  me-2" value="recruiter" name="role" onclick="onlyOne(this)" />Recruiter</span>
                    </p>
                    <div>
                      <span id="notvalid"></span>
                    </div>

                  </div>
                  <input type="submit" value="Sign Up" class="btn btn-block btn-primary mb-3">
                  <hr>
                  <p>Already have an account? <a class="text-decoration-none" href="/login">Login</a></p>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>

  <footer class="footer mt-auto bg-dark text-white py-2">
    <div class="container text-center text-md-left">
      <!-- copyright section -->
      <div class="row align-items-center">
        <p> &copy;
          <a href="#" class="text-decoration-none">
            <strong class="text-white"> The Noobs</strong>
          </a>
          2022 All rights reserved
        </p>
      </div>
    </div>
  </footer>

  <!-- Bootstrap 5 JS  -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
  <script type="text/javascript">
    function onlyOne(checkbox) {
      var checkboxes = document.getElementsByName('role');
      checkboxes.forEach((item) => {
        if (item !== checkbox) item.checked = false;
      });
    }
  </script>
</body>

</html>
<%- include('modules/head') %>

<main>
  <div class="content mt-xs-2 mt-md-4">
    <div class="container py-4">
      <div class="row">
        <div class="col-md-6">
          <img src="/images/signin.svg" alt="Image" class="img-fluid">
        </div>
        <div class="col-md-6">
          <div class="row d-flex align-items-center justify-content-center mb-5">
            <div class="col-md-8">
              <div class="mb-4">
                <h3 class="text-center">Sign up!</h3>
              </div>
              <form action="#" method="post">
                <div class="form-group first">
                  <label for="name"> Name</label>
                  <input type="text" id="name" class="form-control" name="name" placeholder="Your Name">
                </div>
                <div class="form-group mt-2">
                  <label for="email"> Email</label>
                  <input type="email" id="email" name="email" class="form-control" placeholder="abc@gmail.com">
                </div>

                <div class="form-group mt-2">
                  <label for="password"> Password</label>
                  <input type="password" id="password" name="password" class="form-control" placeholder="Your Password">
                </div>
                <div class="form-group mt-2">
                  <label for="confirmPassword"> Confirm Password</label>
                  <input type="password" id="confirmPassword" name="confirmPassword" class="form-control" placeholder="Your Password">
                </div>
                <div class="form-group last my-3">
                  <p>
                    <span><input type="checkbox" class="radio role me-2" value="applicant" name="role" onclick="onlyOne(this)" checked />Applicant</span>
                  </p>

                  <p>
                    <span><input type="checkbox" class="radio role me-2" value="recruiter" name="role" onclick="onlyOne(this)" />Recruiter</span>
                  </p>
                  <div class="my-2" id="responseMessage">
                  </div>

                </div>
                <input type="submit" value="Sign Up" class="btn btn-block btn-primary mb-3 signupBtn">
                <hr>
                <p>Already have an account? <a class="text-decoration-none" href="/login">Login</a></p>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>
<!-- Bootstrap 5 JS  -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
<script type="text/javascript">
  function onlyOne(checkbox) {
    var checkboxes = document.getElementsByName('role');
    checkboxes.forEach((item) => {
      if (item !== checkbox) item.checked = false;
    });
  }
</script>

